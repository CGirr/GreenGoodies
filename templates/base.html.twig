<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}GreenGoodies{% endblock %}</title>

        {% block stylesheets %}
            <link rel="preconnect" href="https://fonts.googleapis.com">
            <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
            <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&family=Playfair+Display:wght@500&display=swap" rel="stylesheet">
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <header class="menu">
            <a href="{{ path('app_home') }}" class="logo">
                <img src="{{ asset('images/logo.svg') }}" alt="Green Goodies">
            </a>
            <nav class="nav-links">
                {% if app.user %}
                    <a href="{{ path('app_home') }}">Nos produits</a>
                    <a href="{{ path('app_cart') }}">Mon panier</a>
                    <a href="{{ path('app_account') }}">Mon compte</a>
                    <a href="{{ path('app_logout') }}">Déconnexion</a>
                {% else %}
                    <a href="{{ path('app_login') }}">Se connecter</a>
                    <a href="{{ path('app_register') }}">S'inscrire</a>
                {% endif %}
            </nav>
        </header>

        <main>
            {% block body %}{% endblock %}
        </main>

        <footer class="footer">
            <span>© GreenGoodies - {{ 'now'|date('Y') }}</span>
        </footer>

    </body>
</html>
